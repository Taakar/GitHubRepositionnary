	<script type="text/javascript" src="file:///android_asset/jquery.min.js"></script>
<script type="text/javascript" src="file:///android_asset/jquery.urldecoder.min.js"></script>
	<script type="text/javascript" src="file:///android_asset/jquery.iframetracker.js"></script>
	<script type="text/javascript" charset="utf-8">
	
	$(document).ready(function() {
	
		// this methods handles click on iframes
		$('.messageContent iframe').iframeTracker({
	        blurCallback: function(){
	            tryToOpenContent(this._overId);
	            this._iframe.blur();
	        },
	        overCallback: function(element){
	            // Mémorisation de l'id de l'iframe survollée
	            this._iframe = $(element);
	            this._overId = this._iframe.attr('src'); // récupration de la valeur de l'attribut src de l'iframe
	        },
	        outCallback: function(element){
	            // Reset lorsque la souris sort de l'iframe et revient dans la fenêtre
	            this._overId = null;
	            this._iframe = null;
	        },
	        _overId: null,
	        _iframe: null
	    });
		
	});
	
	function tryToOpenContent(vidUri) {
		var videoUri = vidUri.toString();
		LiveJSInterface.tryToOpenContent(videoUri);
	}

	
    function setInlineStyles() {
        var summary = document.getElementById('summary');
        summary.setAttribute('original_height', summary.clientHeight+'px');
        summary.style.height = summary.getAttribute('original_height');
        document.getElementById('close').style.webkitTransform = "rotate(0deg)";
    }

    function biggestComponentInTimeInterval(secondsFromDate) {
        if (secondsFromDate < 0) {
            return "N/A";
        } else if (secondsFromDate < 60) {
            var plural = secondsFromDate > 1 ? "s" : "";
            return secondsFromDate+" sec"+plural;
        } else if (secondsFromDate < 60 * 60) {
            var minutes = Math.floor(secondsFromDate / 60);
            return minutes+" mn";
        } else if (secondsFromDate < 60 * 60 * 24) {
            var hours = Math.floor(secondsFromDate / 60 / 60);
            var plural = hours > 1 ? "s" : "";
            return hours+" heure"+plural;
        } else {
            var days = Math.floor(secondsFromDate / 60 / 60 / 24);
            var plural = days > 1 ? "s" : "";
            return days+" jour"+plural;
        }
    }
    
	function closePrivateMessage(){
		$('#privateMessage').remove();
		javascript:window.LiveJSInterface.closePrivateMessage();
	}

    function refreshTimeNoRepeat() {
        var timeElements = document.getElementsByClassName('time');
        for (var i = 0; i < timeElements.length; i++) {
            var timeElement = timeElements[i];
            var timestamp = parseInt(timeElement.getAttribute('timestamp'));

            var currentDate = new Date().getTime();
            var secondsFromDate = Math.floor((currentDate - timestamp*1000)/1000);
            if (secondsFromDate < 5 ) {
                timeElement.innerText = "à l'instant";
            } else {	
                timeElement.innerText = biggestComponentInTimeInterval(secondsFromDate);
            }
        }
    }

    function refreshTimeRepeat() {
        refreshTimeNoRepeat();
        setTimeout("refreshTimeRepeat();", 60000);
    }
    
    window.onload = setInlineStyles;

    </script>
